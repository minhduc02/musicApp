<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <application
        android:name="com.minhduc202.musicapp.app.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.musicApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name="com.minhduc202.musicapp.ui.activity.LoginAndSignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.minhduc202.musicapp.ui.activity.SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.minhduc202.musicapp.ui.activity.MainActivity"
            android:exported="false"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait">
        </activity>

        <service
            android:name="com.minhduc202.musicapp.service.MyService"
            android:foregroundServiceType="mediaPlayback" />

        <receiver android:name="com.minhduc202.musicapp.receiver.MyReceiver" />

    </application>
</manifest>